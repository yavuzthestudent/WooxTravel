@*@model List<Project2WooxTravel_New.Entities.Destination>*@
@using Project2WooxTravel_New.Entities
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Destination>
@{
    ViewBag.Title = "DestinationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Destinasyon İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">

                        </div>
                        <table class="table mt-3">
                            <thead>

                                <tr>
                                    <th scope="col">Destinasyon Id</th>
                                    <th scope="col">Ülke</th>
                                    <th scope="col">Şehir</th>
                                    <th scope="col">Gün/Gece</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sitede Gör</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DestinationId</td>
                                        <td>@item.Country</td>
                                        <td>@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Price</td>
                                        <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Default/DestinationDetail/@item.DestinationId" class="btn btn-warning">Sitede Gör</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/Destination/CreateDestination/" class="btn btn-primary">Yeni Destinasyon Girişi</a>
                    </div>
                </div>
                @Html.PagedListPager((IPagedList)Model, p => Url.Action("DestinationList", new { p }))
            </div>

        </div>
    </div>
</div>
<link href="~/Content/PagedList.css" rel="stylesheet" />
