﻿@using Newtonsoft.Json
@model List<Project2WooxTravel_New.Entities.Message>
@{
    ViewBag.Title = "BarChart";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h2>BarChart</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />

    <style>
        /* Chart container style */
        .chart-container {
            position: relative;
            max-height: 400px; /* Maksimum yükseklik ayarı */
            max-width: 100%; /* Maksimum genişlik ayarı */
            margin: auto; /* Ortalar */
            padding: 20px; /* İç boşluk */
        }

        canvas {
            max-height: 100%; /* Yüksekliği sınırlama */
            max-width: 100%; /* Genişliği sınırlama */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bar Chart</div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="barChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Chart JS -->
    <script src="/kaiadmin-lite-1.2.0/assets/js/plugin/chart.js/chart.min.js"></script>

    <script>
        var barChart = document.getElementById("barChart").getContext("2d");

        var labels = @Html.Raw(JsonConvert.SerializeObject(Model.Select(s => s.Subject).ToList()));
        var dataPoints = @Html.Raw(JsonConvert.SerializeObject(Model.Select(s => s.Subject.Count()).ToList()));

        var myBarChart = new Chart(barChart, {
            type: "bar",
            data: {
                labels: labels,
                datasets: [
                    {
                        label: "Active Users",
                        backgroundColor: "#1d7af3",
                        borderColor: "#1d7af3",
                        borderWidth: 1,
                        data: dataPoints,
                    },
                ],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: "bottom",
                    labels: {
                        padding: 10,
                        fontColor: "#1d7af3",
                    },
                },
                tooltips: {
                    bodySpacing: 4,
                    mode: "nearest",
                    intersect: 0,
                    position: "nearest",
                    xPadding: 10,
                    yPadding: 10,
                    caretPadding: 10,
                },
                layout: {
                    padding: { left: 15, right: 15, top: 15, bottom: 15 },
                },
            },
        });
    </script>
</body>
</html>