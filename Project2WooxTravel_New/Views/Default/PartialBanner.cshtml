@model List<Project2WooxTravel_New.Entities.Destination>

<section id="section-1">
    <div class="content-slider">
        @{ int count = 1;}
        @foreach (var item in Model)
        {
            <input type="radio" id="banner@{@count}" class="sec-1-input" name="banner" @(count == 1 ? "checked" : "")>
            count++;
        }

        <div class="slider">
            @{count = 1;}
            @foreach (var item in Model)
            {
                <div id="top-banner-@{@count}" class="banner" style="background: url('@item.ImageUrl') no-repeat center center; background-size:cover;">
                    <div class="banner-inner-wrapper header-text">
                        <div @*class="main-caption"*@ class="bg-text">
                            <h2>@item.Title</h2>
                            <h1>@item.Country</h1>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="more-info">
                                        <div class="row">
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <i class="far fa-address-book"></i>
                                                <h4><span>Kapasite:</span><br>@item.Capacity</h4>
                                            </div>
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <i class="far fa-calendar-alt"></i>
                                                <h4><span>Gün-Gece:</span><br>@item.DayNight Gün - @(@item.DayNight-1) Gece<em></em></h4>
                                            </div>
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <i class="fa fa-money-bill"></i>
                                                <h4><span>Ortalama Fiyat:</span><br>@item.Price ₺</h4>
                                            </div>
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <div class="main-button">
                                                    <a href="/Default/DestinationDetail/@item.DestinationId">İnceleyin</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        </div>

        <nav>
            <div class="controls">
                @{count = 1;}
                @foreach (var item in Model)
                {
                    <label for="banner@{@count} "><span class="progressbar"><span class="progressbar-fill"></span></span><span class="text">@count</span></label>
                    count++;
                }
            </div>
        </nav>
    </div>
</section>

<link href="~/wooxtravel-1.0.0/assets/css/Blur.css" rel="stylesheet" />